<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/newpassword1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_marginTop="113dp"
        android:layout_marginRight="196dp"
        android:layout_marginEnd="196dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新密码："
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/newpassword1"
        android:layout_alignBottom="@+id/newpassword1"
        android:layout_toLeftOf="@+id/newpassword1"
        android:layout_toStartOf="@+id/newpassword1" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认新密码："
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/newpassword2"
        android:layout_alignBottom="@+id/newpassword2"
        android:layout_toLeftOf="@+id/newpassword2"
        android:layout_toStartOf="@+id/newpassword2" />

    <EditText
        android:id="@+id/newpassword2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_below="@+id/newpassword1"
        android:layout_alignLeft="@+id/newpassword1"
        android:layout_alignStart="@+id/newpassword1" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/newpassword2"
        android:layout_alignRight="@+id/newpassword2"
        android:layout_below="@+id/newpassword2"
        android:layout_marginTop="35dp"
        android:text="确    定" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginBottom="30dp"
        android:text="用户名："
        android:textSize="20sp"/>

    <Spinner
        android:id="@+id/userspinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView16"
        android:layout_toRightOf="@+id/textView16"
        android:layout_alignRight="@+id/newpassword1"
        android:layout_alignEnd="@+id/newpassword1" />

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp"
        android:layout_toEndOf="@+id/button"
        android:layout_toRightOf="@+id/button"
        android:text="返    回" />
</RelativeLayout>